rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin/$(request.auth.uid));
    }
    
    // Matches collection - readable by all, writable by admins only
    match /matches/{matchId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // Commentary subcollection - readable by all, writable by admins only
      match /commentary/{commentaryId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }
    
    // Players collection - readable by all, writable by admins only
    match /players/{playerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Admin collection - users can read their own admin doc, admins can read/write all
    match /admin/{adminId} {
      // Allow users to read their own admin document (needed for login check)
      allow read: if request.auth != null && request.auth.uid == adminId;
      // Allow creating admin document if user is creating their own
      allow create: if request.auth != null && request.auth.uid == adminId;
      // Allow updating/deleting if user is admin or updating their own doc
      allow update, delete: if request.auth != null && (
        request.auth.uid == adminId || 
        exists(/databases/$(database)/documents/admin/$(request.auth.uid))
      );
    }
    
    // Champions collection (optional) - readable by all, writable by admins only
    match /champions/{championId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Tournaments collection - readable by all, writable by admins only
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Squads collection - readable by all, writable by admins only
    match /squads/{squadId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}

